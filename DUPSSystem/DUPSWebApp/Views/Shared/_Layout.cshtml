@using BusinessObjects.Constants
@using BusinessObjects.Extensions
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Drug Use Prevention Support System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/survey.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/courses.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/appointment.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
	<header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shield-alt"></i> DUPS System
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Courses" asp-action="Index">
                                <i class="fas fa-graduation-cap"></i> Khóa học
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Surveys" asp-action="Index">
                                <i class="fas fa-poll"></i> Khảo sát
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Consultants">
                                <i class="fas fa-user-tie"></i> Tư vấn viên
                            </a>
                        </li>

                        <!-- Consultant Menu -->
                        <li asp-authorize="@Roles.ConsultantRoles" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="consultantMenuDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-stethoscope"></i> Tư vấn
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Appointments" asp-action="ConsultantAppointments">
                                        <i class="fas fa-calendar-check"></i> Lịch hẹn tư vấn
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Consultants" asp-action="Profile">
                                        <i class="fas fa-user-tie"></i> Hồ sơ tư vấn viên
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Management Menu - Staff+ -->
                        <li asp-authorize="@Roles.ManagementRoles" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="managementMenuDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs"></i> Quản lý
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Courses" asp-action="Manage" asp-require-permission="manage-courses">
                                        <i class="fas fa-graduation-cap"></i> Quản lý khóa học
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Surveys" asp-action="Manage" asp-require-permission="manage-surveys">
                                        <i class="fas fa-poll"></i> Quản lý khảo sát
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Appointments" asp-action="Manage">
                                        <i class="fas fa-calendar-alt"></i> Quản lý lịch hẹn
                                    </a>
                                </li>

                                <li asp-authorize="@Roles.SeniorRoles"><hr class="dropdown-divider"></li>

                                <li asp-authorize="@Roles.SeniorRoles">
                                    <a class="dropdown-item" asp-controller="Consultants" asp-action="Manage" asp-require-permission="manage-consultants">
                                        <i class="fas fa-user-tie"></i> Quản lý tư vấn viên
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Admin Menu -->
                        <li asp-authorize="@Roles.AdminOnly" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning" href="#" id="adminMenuDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-crown"></i> Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard" asp-require-permission="view-dashboard">
                                        <i class="fas fa-users"></i> Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="UserManager" asp-require-permission="manage-users">
                                        <i class="fas fa-users"></i> Quản lý người dùng
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- User Authentication -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userAccountDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.GetUserFullName()
                                    <span class="badge bg-secondary ms-1">@User.GetHighestRole()</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                            <i class="fas fa-user-edit"></i> Thông tin cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Courses" asp-action="MyCourses" asp-require-permission="register-courses">
                                            <i class="fas fa-graduation-cap"></i> Khóa học của tôi
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Surveys" asp-action="Results" asp-require-permission="take-surveys">
                                            <i class="fas fa-chart-line"></i> Kết quả khảo sát
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Appointments" asp-action="MyAppointments" asp-require-permission="book-appointments">
                                            <i class="fas fa-calendar-alt"></i> Lịch hẹn của tôi
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show mx-3" role="alert">
			<i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger alert-dismissible fade show mx-3" role="alert">
			<i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	@if (TempData["InfoMessage"] != null)
	{
		<div class="alert alert-info alert-dismissible fade show mx-3" role="alert">
			<i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	<div class="container-fluid">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					&copy; 2025 - Drug Use Prevention Support System
				</div>
				<div class="col-md-6 text-end">
					<a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Chính sách bảo mật</a> |
					<a href="#" class="text-decoration-none">Liên hệ hỗ trợ</a>
				</div>
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Ultra simple version using ViewBag from BaseController
        window.USER_INFO = {
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                    id: @(Context.Session.GetInt32("UserId") ?? 0),
                    email: '@Html.Raw(Context.Session.GetString("UserEmail") ?? "")',
                    name: '@Html.Raw(Context.Session.GetString("UserName") ?? "")',
                    token: '@Html.Raw(Context.Session.GetString("UserToken") ?? "")',
                    authenticated: true,
                    isAdmin: @(User.IsInRole("Admin") ? "true" : "false"),
                    isManager: @(User.IsInRole("Manager") ? "true" : "false"),
                    isStaff: @(User.IsInRole("Staff") ? "true" : "false"),
                    isConsultant: @(User.IsInRole("Consultant") ? "true" : "false"),
                    isMember: @(User.IsInRole("Member") ? "true" : "false")
            </text>
        }
        else
        {
            <text>
                    id: null,
                    email: '',
                    name: '',
                    token: '',
                    authenticated: false,
                    isAdmin: false,
                    isManager: false,
                    isStaff: false,
                    isConsultant: false,
                    isMember: false
            </text>
        }
        };

        // Helper functions
        function canManageCourses() {
            return window.USER_INFO.isStaff || window.USER_INFO.isManager || window.USER_INFO.isAdmin;
        }

        function canManageUsers() {
            return window.USER_INFO.isAdmin;
        }

        function canViewReports() {
            return window.USER_INFO.isManager || window.USER_INFO.isAdmin;
        }

        function isAuthenticated() {
            return window.USER_INFO.authenticated;
        }
    </script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>