<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DUPS System</title>
    <meta name="auth-token" content="@ViewBag.AuthToken" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-shield-heart"></i> DUPS System
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home - Everyone can see -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>

                        @{
                            var role = ViewBag.CurrentUserRole as string ?? "Guest";
                            var isAuthenticated = ViewBag.IsAuthenticated as bool? ?? false;
                        }

                        <!-- Courses - Everyone can view -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-graduation-cap"></i> Khóa học
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Courses")">Danh sách khóa học</a></li>
                                @if (isAuthenticated && role != "Guest")
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("MyCourses", "Courses")">Khóa học của tôi</a></li>
                                }
                                @if (role == "Staff" || role == "Manager" || role == "Admin")
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Manage", "Courses")">Quản lý khóa học</a></li>
                                }
                            </ul>
                        </li>

                        <!-- Surveys -->
                        @if (isAuthenticated && role != "Guest")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-poll"></i> Khảo sát
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Surveys")">Danh sách khảo sát</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("MyResults", "Surveys")">Kết quả của tôi</a></li>
                                    @if (role == "Staff" || role == "Manager" || role == "Admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Manage", "Surveys")">Quản lý khảo sát</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- Appointments -->
                        @if (isAuthenticated && role != "Guest")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-calendar-check"></i> Lịch hẹn
                                </a>
                                <ul class="dropdown-menu">
                                    @if (role == "Member" || role == "Staff" || role == "Manager" || role == "Admin")
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Book", "Appointments")">Đặt lịch hẹn</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("MyAppointments", "Appointments")">Lịch hẹn của tôi</a></li>
                                    }
                                    @if (role == "Consultant")
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("MySchedule", "Appointments")">Lịch làm việc</a></li>
                                    }
                                    @if (role == "Staff" || role == "Manager" || role == "Admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Manage", "Appointments")">Quản lý lịch hẹn</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- Consultants -->
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-md"></i> Tư vấn viên
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Consultants")">Danh sách tư vấn viên</a></li>
                                    @if (role == "Manager" || role == "Admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Manage", "Consultants")">Quản lý tư vấn viên</a></li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- Management Menu - Only for Admin/Manager -->
                        @if (role == "Manager" || role == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cogs"></i> Quản lý
                                </a>
                                <ul class="dropdown-menu">
                                    @if (role == "Admin")
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Users", "Admin")">Quản lý người dùng</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Roles", "Admin")">Quản lý vai trò</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" href="@Url.Action("Dashboard", "Reports")">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Reports")">Báo cáo</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (!isAuthenticated || role == "Guest")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Auth")">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Auth")">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @ViewBag.CurrentUserName
                                    <span class="badge bg-secondary ms-1">@role</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                            <i class="fas fa-user-edit"></i> Hồ sơ
                                        </a>
                                    </li>
                                    @if (role == "Consultant")
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("ConsultantProfile", "Account")">
                                                <i class="fas fa-id-card"></i> Hồ sơ tư vấn viên
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="logout()">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="margin-top: 76px;">
        <main role="main" class="pb-3">
            <!-- Notification Area -->
            <div id="notification-area" class="mt-3"></div>

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2024 - Drug Use Prevention Support System. All rights reserved.
                </div>
                <div class="col-md-6 text-end">
                    <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Global logout function
        function logout() {
            if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                $.post('@Url.Action("Logout", "Auth")', function() {
                    window.location.href = '@Url.Action("Index", "Home")';
                });
            }
        }

        // Global notification function
        function showNotification(message, type = 'info') {
            const alertClass = type === 'error' ? 'alert-danger' :
                              type === 'success' ? 'alert-success' :
                              type === 'warning' ? 'alert-warning' : 'alert-info';

            const notification = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            $('#notification-area').html(notification);

            // Auto dismiss after 5 seconds
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }

        // Handle AJAX errors globally
        $(document).ajaxError(function(event, xhr, settings, thrownError) {
            if (xhr.status === 401) {
                showNotification('Phiên đăng nhập đã hết hạn. Vui lòng đăng nhập lại.', 'warning');
                setTimeout(() => {
                    window.location.href = '@Url.Action("Login", "Auth")';
                }, 2000);
            } else if (xhr.status === 403) {
                showNotification('Bạn không có quyền thực hiện thao tác này.', 'error');
            }
        });

        // Set authorization header for all AJAX requests
        $.ajaxSetup({
            beforeSend: function(xhr) {
                // For MVC, we'll set this via a meta tag or data attribute
                var token = $('meta[name="auth-token"]').attr('content');
                if (!token) {
                    // Alternative: get from session via ViewBag
                    token = '@ViewBag.AuthToken';
                }
                if (token && token !== '') {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + token);
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>