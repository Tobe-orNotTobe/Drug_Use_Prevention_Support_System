@* Views/Shared/_ConsultantCard.cshtml *@
<div class="card consultant-card h-100 shadow-sm border-0">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <div class="avatar-circle me-3 bg-primary text-white">
                <i class="fas fa-user-md"></i>
            </div>
            <div>
                <h6 class="card-title mb-1 fw-bold">@Model.User?.FullName</h6>
                <small class="text-muted">@Model.Expertise</small>
            </div>
        </div>

        <div class="mb-3">
            <div class="row text-center">
                <div class="col-4">
                    <div class="border-end">
                        <div class="fw-bold text-primary">@Model.TotalAppointments</div>
                        <small class="text-muted">Lịch hẹn</small>
                    </div>
                </div>
                <div class="col-4">
                    <div class="border-end">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
                        </span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="fw-bold text-info">★ 4.8</div>
                    <small class="text-muted">Đánh giá</small>
                </div>
            </div>
        </div>

        <p class="card-text text-muted small">
            @(string.IsNullOrEmpty(Model.Bio) ? "Chưa có thông tin giới thiệu" :
                (Model.Bio.Length > 100 ? Model.Bio.Substring(0, 100) + "..." : Model.Bio))
        </p>
    </div>

    <div class="card-footer bg-transparent border-0">
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm flex-fill"
                    onclick="viewConsultantDetails(@Model.ConsultantId)">
                <i class="fas fa-eye me-1"></i>Chi tiết
            </button>
            <button class="btn btn-primary btn-sm flex-fill"
                    onclick="bookAppointment(@Model.ConsultantId)">
                <i class="fas fa-calendar-plus me-1"></i>Đặt lịch
            </button>
        </div>
    </div>
</div>

