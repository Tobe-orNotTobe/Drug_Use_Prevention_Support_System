@{
    ViewData["Title"] = "Danh sách tư vấn viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-md me-1"></i>
                        Danh sách tư vấn viên
                    </h3>
                    <div class="card-tools">
                        <a href="/Appointments/MyAppointments" class="btn btn-success">
                            <i class="fas fa-calendar-check"></i> Lịch hẹn của tôi
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Search Section -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm theo tên, chuyên môn...">
                                <button class="btn btn-outline-secondary" type="button" id="searchBtn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="sortFilter">
                                <option value="name">Sắp xếp theo tên</option>
                                <option value="expertise">Sắp xếp theo chuyên môn</option>
                                <option value="experience">Sắp xếp theo kinh nghiệm</option>
                            </select>
                        </div>
                    </div>

                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Đang tải danh sách tư vấn viên...</p>
                    </div>

                    <!-- Consultants Grid -->
                    <div id="consultantsGrid" class="row">
                        <!-- Consultants will be loaded here -->
                    </div>

                    <!-- Empty State -->
                    <div id="emptyState" class="text-center py-5" style="display: none;">
                        <i class="fas fa-user-md fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">Không có tư vấn viên nào</h4>
                        <p class="text-muted">Hiện tại chưa có tư vấn viên nào để đặt lịch hẹn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mt-4">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info text-white rounded">
                <div class="inner p-3">
                    <h3 id="totalConsultants">0</h3>
                    <p>Tổng tư vấn viên</p>
                </div>
                <div class="icon">
                    <i class="fas fa-user-md"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-success text-white rounded">
                <div class="inner p-3">
                    <h3 id="availableConsultants">0</h3>
                    <p>Có thể đặt lịch</p>
                </div>
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-warning text-white rounded">
                <div class="inner p-3">
                    <h3 id="myAppointments">0</h3>
                    <p>Lịch hẹn của tôi</p>
                </div>
                <div class="icon">
                    <i class="fas fa-calendar"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-danger text-white rounded">
                <div class="inner p-3">
                    <h3 id="pendingAppointments">0</h3>
                    <p>Chờ xác nhận</p>
                </div>
                <div class="icon">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Book Appointment Modal -->
<div class="modal fade" id="bookAppointmentModal" tabindex="-1" aria-labelledby="bookAppointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookAppointmentModalLabel">Đặt lịch hẹn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="bookAppointmentForm">
                <div class="modal-body">
                    <input type="hidden" id="selectedConsultantId" name="consultantId">

                    <div class="row mb-3">
                        <div class="col-12">
                            <h6><i class="fas fa-user-md"></i> Tư vấn viên:</h6>
                            <div id="selectedConsultantInfo" class="bg-light p-3 rounded">
                                <!-- Consultant info will be displayed here -->
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="appointmentDate" class="form-label">
                                    <i class="fas fa-calendar"></i> Ngày hẹn <span class="text-danger">*</span>
                                </label>
                                <input type="date" class="form-control" id="appointmentDate" name="appointmentDate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="appointmentTime" class="form-label">
                                    <i class="fas fa-clock"></i> Giờ hẹn <span class="text-danger">*</span>
                                </label>
                                <select class="form-control" id="appointmentTime" name="appointmentTime" required>
                                    <option value="">Chọn giờ</option>
                                    <option value="08:00">08:00</option>
                                    <option value="09:00">09:00</option>
                                    <option value="10:00">10:00</option>
                                    <option value="11:00">11:00</option>
                                    <option value="14:00">14:00</option>
                                    <option value="15:00">15:00</option>
                                    <option value="16:00">16:00</option>
                                    <option value="17:00">17:00</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="durationMinutes" class="form-label">
                            <i class="fas fa-hourglass-half"></i> Thời lượng (phút)
                        </label>
                        <select class="form-control" id="durationMinutes" name="durationMinutes">
                            <option value="30">30 phút</option>
                            <option value="60" selected>60 phút</option>
                            <option value="90">90 phút</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">
                            <i class="fas fa-sticky-note"></i> Ghi chú
                        </label>
                        <textarea class="form-control" id="notes" name="notes" rows="3"
                                  placeholder="Mô tả ngắn gọn về vấn đề bạn muốn tư vấn..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="submitBookingBtn">
                        <i class="fas fa-calendar-plus"></i> Đặt lịch hẹn
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Consultant Detail Modal -->
<div class="modal fade" id="consultantDetailModal" tabindex="-1" aria-labelledby="consultantDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consultantDetailModalLabel">Thông tin tư vấn viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="consultantDetailContent">
                <!-- Consultant details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="bookFromDetailBtn">
                    <i class="fas fa-calendar-plus"></i> Đặt lịch hẹn
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/consultants.js"></script>
}