@using BusinessObjects.Constants
@using BusinessObjects.Extensions
@{
    ViewData["Title"] = "Lịch hẹn của tôi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-alt"></i> Lịch hẹn của tôi
                    </h3>
                    <!-- Only authenticated users can book appointments -->
                    <div asp-authorize="@Roles.AuthenticatedRoles">
                        <a asp-controller="Appointments" asp-action="Consultants" class="btn btn-success" asp-require-permission="book-appointments">
                            <i class="fas fa-plus"></i> Đặt lịch hẹn mới
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filters -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Pending">Chờ xác nhận</option>
                                <option value="Confirmed">Đã xác nhận</option>
                                <option value="Completed">Hoàn thành</option>
                                <option value="Cancelled">Đã hủy</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="date" id="dateFilter" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <select id="consultantFilter" class="form-select">
                                <option value="">Tất cả tư vấn viên</option>
                                <!-- Will be populated via AJAX -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button id="filterBtn" class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>

                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <!-- Appointments Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tư vấn viên</th>
                                    <th>Ngày hẹn</th>
                                    <th>Thời gian</th>
                                    <th>Trạng thái</th>
                                    <th>Ghi chú</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="appointmentsTableBody">
                                <!-- Data will be loaded here via AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- Pagination will be generated here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointment Statistics - Only for Staff+ -->
    <div asp-authorize="@Roles.ManagementRoles" class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar"></i> Thống kê lịch hẹn
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5>Tổng số lịch hẹn</h5>
                                    <h3 id="totalAppointments">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5>Chờ xác nhận</h5>
                                    <h3 id="pendingAppointments">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5>Đã hoàn thành</h5>
                                    <h3 id="completedAppointments">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5>Đã hủy</h5>
                                    <h3 id="cancelledAppointments">-</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pass user permissions to JavaScript
        window.USER_PERMISSIONS = {
            canBookAppointments: @(User.CanBookAppointments().ToString().ToLower()),
            canViewAllAppointments: @(User.CanViewAllAppointments().ToString().ToLower()),
            canManageAppointments: @(User.CanManageAppointments().ToString().ToLower()),
            isConsultant: @(User.IsConsultant().ToString().ToLower()),
            isAuthenticated: @(User.Identity.IsAuthenticated.ToString().ToLower()),
            userRole: '@User.GetHighestRole()'
        };
    </script>
    <script src="~/js/my-appointments.js" asp-append-version="true"></script>
}