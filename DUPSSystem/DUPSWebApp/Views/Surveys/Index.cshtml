@using BusinessObjects.Constants
@using BusinessObjects.Extensions
@{
    ViewData["Title"] = "Khảo sát đánh giá";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-poll"></i> Khảo sát đánh giá rủi ro
                    </h3>
                    <!-- Only Staff+ can create surveys -->
                    <div asp-authorize="@Roles.ManagementRoles">
                        <a asp-controller="Surveys" asp-action="Create" class="btn btn-success" asp-require-permission="manage-surveys">
                            <i class="fas fa-plus"></i> Tạo khảo sát mới
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filters -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm khảo sát...">
                        </div>
                        <div class="col-md-3">
                            <select id="typeFilter" class="form-select">
                                <option value="">Tất cả loại khảo sát</option>
                                <option value="ASSIST">ASSIST</option>
                                <option value="CRAFFT">CRAFFT</option>
                                <option value="Custom">Tùy chỉnh</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">Tất cả trạng thái</option>
                                <option value="true">Hoạt động</option>
                                <option value="false">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="searchBtn" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                        </div>
                    </div>

                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <!-- Surveys Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tiêu đề</th>
                                    <th>Loại</th>
                                    <th>Số câu hỏi</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="surveysTableBody">
                                <!-- Data will be loaded here via AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- Pagination will be generated here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- User's Survey Results - Only for authenticated users -->
    <div asp-authorize="@Roles.AuthenticatedRoles" class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-line"></i> Kết quả khảo sát của tôi
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Khảo sát</th>
                                    <th>Ngày thực hiện</th>
                                    <th>Điểm số</th>
                                    <th>Mức độ rủi ro</th>
                                    <th>Khuyến nghị</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="userSurveyResultsTableBody">
                                <!-- User survey results will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Reports - Only for Manager+ -->
    <div asp-authorize="@Roles.SeniorRoles" class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar"></i> Báo cáo khảo sát tổng quan
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5>Tổng số khảo sát</h5>
                                    <h3 id="totalSurveys">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5>Đã hoàn thành</h5>
                                    <h3 id="completedSurveys">-</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5>Rủi ro cao</h5>
                                    <h3 id="highRiskSurveys">-</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Surveys" asp-action="AllResults" class="btn btn-info" asp-require-permission="view-reports">
                            <i class="fas fa-chart-bar"></i> Xem báo cáo chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pass user permissions to JavaScript
        window.USER_PERMISSIONS = {
            canTakeSurveys: @(User.CanTakeSurveys().ToString().ToLower()),
            canManageSurveys: @(User.CanManageSurveys().ToString().ToLower()),
            canViewReports: @(User.CanViewReports().ToString().ToLower()),
            isAuthenticated: @(User.Identity.IsAuthenticated.ToString().ToLower()),
            userRole: '@User.GetHighestRole()'
        };
    </script>
    <script src="~/js/surveys.js" asp-append-version="true"></script>
}