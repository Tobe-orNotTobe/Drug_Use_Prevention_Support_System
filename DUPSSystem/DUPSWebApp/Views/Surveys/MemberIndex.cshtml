@{
    ViewData["Title"] = "Khảo sát";
}

<div class="row">
    <div class="col-md-12">
        <div class="mb-4">
            <h2><i class="fas fa-clipboard-question"></i> Khảo sát phòng ngừa ma túy</h2>
            <p class="text-muted">Tham gia các khảo sát để đánh giá mức độ rủi ro và nhận được hỗ trợ phù hợp</p>
        </div>

        <div class="row" id="surveysContainer">
        </div>

        <div id="loadingSpinner" class="text-center d-none">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
        </div>

        <div id="noSurveys" class="text-center d-none">
            <div class="card">
                <div class="card-body py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Hiện tại chưa có khảo sát nào</h5>
                    <p class="text-muted">Vui lòng quay lại sau để tham gia các khảo sát mới</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="surveyInfoModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="surveyModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="surveyModalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="startSurveyBtn">Bắt đầu khảo sát</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/surveys/survey-member-index.js" asp-append-version="true"></script>
}