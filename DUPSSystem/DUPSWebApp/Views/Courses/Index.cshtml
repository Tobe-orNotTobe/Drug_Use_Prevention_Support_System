@using BusinessObjects.Constants
@using BusinessObjects.Extensions
@{
    ViewData["Title"] = "Danh sách khóa học";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-graduation-cap"></i> Danh sách khóa học
                    </h3>
                    <!-- Only Staff+ can create courses -->
                    <div asp-authorize="@Roles.ManagementRoles">
                        <a asp-controller="Courses" asp-action="Create" class="btn btn-success" asp-require-permission="manage-courses">
                            <i class="fas fa-plus"></i> Thêm khóa học mới
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filters and Search -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm khóa học...">
                        </div>
                        <div class="col-md-3">
                            <select id="targetAudienceFilter" class="form-select">
                                <option value="">Tất cả đối tượng</option>
                                <option value="Student">Học sinh</option>
                                <option value="Parent">Phụ huynh</option>
                                <option value="Teacher">Giáo viên</option>
                                <option value="General">Cộng đồng</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">Tất cả trạng thái</option>
                                <option value="true">Hoạt động</option>
                                <option value="false">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="searchBtn" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                        </div>
                    </div>

                    <!-- Loading Spinner -->
                    <div id="loadingSpinner" class="text-center" style="display: none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                    <!-- Courses Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Tiêu đề</th>
                                    <th>Đối tượng</th>
                                    <th>Thời lượng (phút)</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="coursesTableBody">
                                <!-- Data will be loaded here via AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- Pagination will be generated here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- User's Registered Courses Section - Only for authenticated users -->
    <div asp-authorize="@Roles.AuthenticatedRoles" class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-graduate"></i> Khóa học đã đăng ký
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Khóa học</th>
                                    <th>Ngày đăng ký</th>
                                    <th>Trạng thái</th>
                                    <th>Tiến độ</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="userCoursesTableBody">
                                <!-- User courses will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pass user permissions to JavaScript
        window.USER_PERMISSIONS = {
            canRegisterCourses: @(User.CanRegisterCourses().ToString().ToLower()),
            canManageCourses: @(User.CanManageCourses().ToString().ToLower()),
            isAuthenticated: @(User.Identity.IsAuthenticated.ToString().ToLower()),
            userRole: '@User.GetHighestRole()'
        };
    </script>
    <script src="~/js/courses.js" asp-append-version="true"></script>
}