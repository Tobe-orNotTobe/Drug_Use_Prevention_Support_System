@model DUPSWebApp.Models.UpdateProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle text-primary" style="font-size: 4rem;"></i>
                    </div>
                    <h5>@(Context.Session.GetString("UserName") ?? User.Identity.Name)</h5>
                    <p class="text-muted">@(Context.Session.GetString("UserEmail") ?? "")</p>
                    <span class="badge bg-primary">@(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? "Member")</span>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-cog"></i> Tùy chọn</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action active">
                        <i class="fas fa-user"></i> Thông tin cá nhân
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-lock"></i> Đổi mật khẩu
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-bell"></i> Thông báo
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-edit"></i> Cập nhật thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("UpdateProfile", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.FullName, new { @class = "form-label" })
                                    <i class="fas fa-user"></i>
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                                    <i class="fas fa-phone"></i>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Gender, new { @class = "form-label" })
                                    <i class="fas fa-venus-mars"></i>
                                    @Html.DropDownListFor(m => m.Gender, new SelectList(new[]
                                             {
                                new { Value = "", Text = "-- Chọn giới tính --" },
                                new { Value = "Nam", Text = "Nam" },
                                new { Value = "Nữ", Text = "Nữ" },
                                new { Value = "Khác", Text = "Khác" }
                                }, "Value", "Text"), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label" })
                                    <i class="fas fa-calendar"></i>
                                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "date" })
                                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                            <i class="fas fa-map-marker-alt"></i>
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = "3" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-between">
                            @Html.ActionLink("Quay lại", "Dashboard", "Home", null, new { @class = "btn btn-secondary" })
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật thông tin
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}